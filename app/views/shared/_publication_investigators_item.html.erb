<td class="list-title-left">
  <% if show_valid_checkboxes %>
	<% for investigator_abstract in publication.investigator_abstracts %>
		<%= check_box_tag(investigator_abstract.id, investigator_abstract.id, investigator_abstract.is_valid, :onclick => remote_function( :url =>  set_investigator_abstract_end_date_abstract_path(investigator_abstract.id),
		:before => "Element.show('spinner')", :complete => "Element.hide('spinner')"
		)) if show_valid_checkboxes and !investigator_abstract.investigator_id.blank? -%>&nbsp;<%= link_to_investigator( publication, Investigator.include_deleted(investigator_abstract.investigator_id), nil, false, true, simple_links, 'underlined') if !investigator_abstract.investigator_id.blank? -%><%= "<br/>" if @pdf.blank? %>
	<% end %>
  <% else %>
	<% for investigator in publication.investigators %>
		<%= link_to_investigator( publication, investigator, nil, false, true, simple_links, 'underlined') if !investigator.blank? %><%= "<br/>" if @pdf.blank? %>
	  <% end %>
  <% end %>
</td>
