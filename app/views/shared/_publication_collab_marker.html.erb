<td class="marker-left">
	<% if publication.investigators.length > 1 && ! (investigators_in_unit.nil?) %>
		<% investigators_on_citation = publication.investigators.collect{|x| x.id } %>
		<% hasIntra = investigators_on_citation & investigators_in_unit %>
		<% hasInter = (investigators_on_citation | investigators_in_unit) - investigators_in_unit %>
		<%= "*" if hasIntra.length > 1  %>
		<%= "&bull;" if hasInter.length > 0  %>
	<% end %>
</td>
