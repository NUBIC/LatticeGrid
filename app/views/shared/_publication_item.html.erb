<% show_delete_checkboxes = false if show_delete_checkboxes.nil? %>
<td class="list-left"> 
	<%= check_box_tag(publication.id, publication.id, publication.deleted_at.blank?, :onclick => remote_function( :url =>  set_deleted_date_abstract_path(publication.id),
	:before => "Element.show('spinner')", :complete => "Element.hide('spinner')"
	))  if show_delete_checkboxes %>
	<%= highlightInvestigator(publication) %>
	<%= link_to publication.title, abstract_url(publication) %>
	<i><%= publication.journal_abbreviation %></i> 	
	(<%= publication.year %>)
	<% if publication.pages.length > 0 %>
		<%= h(publication.volume) %>:<%= h(publication.pages) %>.
	<% else %>
	 <i>In process.</i>
	<% end %>
</td> 
