<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>RHLCCC Faculty Publications: <%= controller.action_name %></title>
  <%= javascript_include_tag :defaults, 'dropdownmenu', 'FusionCharts' %> 
  <%= stylesheet_link_tag 'publications','dropdownmenu'   %>
  <script language="javascript">
	// this is messy. Should probably move it to a helper
	var publication_year=new Array()
	<% cnt = 0 %>
	<% for the_year in @year_array %>
		<% if  controller.action_name.match('list') != nil && the_year.to_s == @year%>
			publication_year[<%= cnt %>]='<%= link_to the_year, abstracts_by_year_path(:id => the_year, :page=> 1), :class => "currentyear" %>';
		<% else %>
			publication_year[<%= cnt %>]='<%= link_to the_year, abstracts_by_year_path(:id => the_year, :page=> 1) %>';
		<% end %>
		<% cnt = cnt+1 %>
	<% end %>
	var publications_by_program=new Array()
	<% cnt = 0 %>
	<% for prog in @programs %>
		<% if  controller.action_name.match('list') != nil && the_year.to_s == @year%>
			publications_by_program[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), program_path(prog.id) %>';
		<% else %>
			publications_by_program[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), program_path(prog.id) %>';
		<% end %>
		<% cnt = cnt+1 %>
	<% end %>
	var publications_by_faculty=new Array()
	<% cnt = 0 %>
	<% for prog in @programs %>
		<% if  controller.action_name.match('list') != nil && the_year.to_s == @year%>
			publications_by_faculty[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), show_investigators_program_path(prog.id) %>';
		<% else %>
			publications_by_faculty[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), show_investigators_program_path(prog.id) %>';
		<% end %>
		<% cnt = cnt+1 %>
	<% end %>
	var graphs_by_program=new Array()
	<% cnt = 0 %>
	<% for prog in @programs %>
		<% if  controller.action_name.match('list') != nil && the_year.to_s == @year%>
			graphs_by_program[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), show_program_graph_path(prog.id) %>';
		<% else %>
			graphs_by_program[<%= cnt %>]='<%= link_to prog.program_title.gsub(/\'/, ""), show_program_graph_path(prog.id) %>';
		<% end %>
		<% cnt = cnt+1 %>
	<% end %>
  </script>

</head>
<body>

<% if ENV['RAILS_ENV'] == 'development' %>
    <div id="debug" style="margin: 5px 5px 5px 5px;">
        <a href="#" onclick="Element.toggle('debug_info');return false" style="text-decoration: none; color: #999;">Show Debug Info &#10162;</a>
        <div id="debug_info" style="display : none;">
            <%= debug session %>
            <%= debug params %>
        </div>
    </div>
<% end %>
<div id="main" class="autoclear">
	<div id="banner"><a href="http://www.cancer.northwestern.edu" ><%= image_tag "pageheader.jpg", options={:alt=>"The Robert H. Lurie Comprehensive Cancer Center of Northwestern University"} %></a></div>
	<div id="results" class="notice"><%= flash[:notice] %> 	<%= image_tag 'loading.gif', :id=>'spinner', :style=>"display:none; float:right;" %> </div>
	<div id="title">Cancer Center Member Publications and Abstracts Site</div>
	<div id="search">
		<% form_for :keywords, :url => {:controller => 'abstracts', :action => "search"}  do |form| %> 
		 	<%= form.text_field :keywords, :size => 20 %> Search
	      	<%= form.select(:search_field, %w{ Author Title Journal Abstract All}) %> Enter term and hit return. 
	 		Use '*' for as a wildcard. 
		<% end %> 
	</div>
	<div id="side">
		<div id="sideinfo">
			<div id="menubar">
			<a href="list" onClick="return clickreturnvalue()" onMouseover="dropdownmenu(this, event, publication_year, '60px')" onMouseout="delayhidemenu()">Publications by year</a> 
			</div>
			<div id="menubar">
			<a href="list" onClick="return clickreturnvalue()" onMouseover="dropdownmenu(this, event, publications_by_program, '380px')" onMouseout="delayhidemenu()">Publications by program</a>
			</div>
			<div id="menubar">
			<a href="list" onClick="return clickreturnvalue()" onMouseover="dropdownmenu(this, event, publications_by_faculty, '380px')" onMouseout="delayhidemenu()">Faculty by program</a> 
			</div>
			<div id="menubar">
			<a href="list" onClick="return clickreturnvalue()" onMouseover="dropdownmenu(this, event, graphs_by_program, '380px')" onMouseout="delayhidemenu()">Graphs by program</a> 
			</div>
			<div id="menubar">
				<%= link_to "MeSH tag cloud", tag_cloud_abstracts_path, :title=>"Display MeSH tag cloud for all publications" %>
			</div>
			<div id="menubar">
				<%= link_to "Program Overview", index_programs_path, :title => "Display an overview of all programs" %>
			</div>
		</div> <!-- end of sideinfo -->
		<p></p>
	</div> <!-- end of side -->
	<div id="maincontent">
		<div id="niceline">
		</div>
		<div id="content">
		<%= yield  %>
		</div> <!-- end of content -->
		<div id="last_load_date">
			Last updated from PubMed on <%= session[:last_load_date].strftime("%A, %B %d, %Y") %>
		</div>
	</div> <!-- end of maincontent -->
</div> <!-- end of main -->
</body>
</html>
