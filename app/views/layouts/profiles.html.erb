<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title><%= LatticeGridHelper.page_title %>: <%= controller.action_name %></title>
    <meta name="keywords" content="LatticeGrid social network analysis, pubmed, collaborations">
  	<!-- javascript files -->
  	<% @javascripts ||= ['prototype', 'jquery-1.8.3', 'jquery.sparkline.min', 'ddsmoothmenu2'] %>
  	<% @javascripts += @javascripts_add if defined?(@javascripts_add) %>
    <% @javascripts.each do |js| %>
      <%= javascript_include_tag js %>
    <% end %>
  	<!-- CSS Files -->
  	<% @stylesheets ||= ['publications', "latticegrid/#{lattice_grid_instance}", 'ddsmoothmenu', 'ddsmoothmenu-v'] %>
    <% @stylesheets.each do |ss| %>
      <%= stylesheet_link_tag ss %>
    <% end %>
  	<link rel="shortcut icon" href='<%= "/assets/#{lattice_grid_instance}/favicon.ico" -%>' />
    <% if @javascripts.join =~ /jquery/i %>
      <script type="text/javascript" language="JavaScript">
        jQuery.noConflict();
     	  var $j = jQuery;
        // Use jQuery via jQuery(...)
      </script>
    <% end %>
    <%= LatticeGridHelper.google_analytics.html_safe -%>
    <%= render 'shared/menu_scripts', :menu_nodes => @menu_nodes %>
  </head>
  <body>

    <%= render 'shared/debug_section' %>
    <div id="main" class="autoclear">
      <div id="results" class="notice">
        <%= flash[:notice] %>
        <div id="errors">
          <%= flash[:errors] %>
        </div>
        <%= image_tag 'loading.gif', :id => 'spinner', :style => "display:none; float:right;" %>
      </div>
      <div id='title'>
        <%= link_to(image_tag('latticegrid.png', size: '65x93'), root_path) -%>
        <%= link_to(LatticeGridHelper.header_title.html_safe, current_abstracts_url, id: 'title_link') -%>
      </div>
      <div id="search">
        <span style="float:right; z-index:3; ">
          <% if is_admin? %>
            <%= link_to("Admin: Edit", profiles_url) %>
            <%= link_to("Splash", splash_profiles_url) %>
            <%= link_to("List All", list_investigators_profiles_url) %>
            <%= link_to("Summaries", list_summaries_profiles_url) %>
            <%= link_to("Edit", edit_investigators_profiles_url) %>
          <% else %>
            <%= link_to("Edit your research profile", current_user.blank? ? profiles_url : edit_profile_url(current_user.username)) %>
            <%= link_to("Edit your publications", current_user.blank? ? profiles_url : edit_pubs_profile_url(current_user.username)) %>
          <% end %>
          <%= link_to("#{current_user.username} &nbsp; Logout".html_safe, logout_url) if !current_user.blank? %>
        </span>
        <span style="float:left; margin-left:-105px;">
          <%= link_to("LatticeGrid Home", abstracts_url) %>
        </span>
        &nbsp;
        <br/>
      </div>
      <%= render 'shared/side' %>
      <% main_content_id = controller_name == 'welcome' ? 'welcome_content' : 'maincontent' %>
      <div id="<%= main_content_id %>">
        <div id='content'>
          <%= yield  %>
        </div> <!-- end of content -->
      </div> <!-- end of maincontent -->
      <div id='banner'>
        <div id='last_load_date'>
          Last updated from PubMed on <%= session[:last_load_date].strftime("%A, %B %d, %Y") %>
        </div>
        <a href="<%= LatticeGridHelper.home_url %>" >
          <%= image_tag "#{lattice_grid_instance}/pageheader.jpg", alt: LatticeGridHelper.header_title %>
        </a>
      </div>
    </div> <!-- end of main -->
  </body>
</html>
