<div id="listing">
	<h2><%= @heading %></h2>
  <% if @investigators.length > 0 %>
  <table cellpadding="2" cellspacing="0" class="borderless"> 
	<% cnt = 0 %>
	<tr valign="bottom" class="header">
		<td class="list-title-left">
			#
		</td>
		<td class="list-title-left">
			Name
		</td>
		<td class="list-title-left">
			<%= LatticeGridHelper.affilation_name %>
		</td>
	</tr>
  <% for investigator in @investigators %>
	<tr class="<%= cycle('even', 'odd') %>">
		<td class="list-left">
			<% cnt+=1 %>
			<%= cnt %>
		</td>
		<td class="list-left">
			<%= link_to( (investigator.first_name||"")+" "+(investigator.middle_name||"")+" "+investigator.last_name+", "+(investigator.degrees||""), investigator_url(investigator.username))  %>
		</td>
		<td class="list-left">
			<%= link_to_unit(investigator.home_department) if (! investigator.home_department_id.blank?) and (! investigator.home_department.blank?) %>
		</td>
	</tr>
  <% end %>
  </table>
  <% end %>

<br/>
</div>
