<div id="listing">
<div style="margin-left:5px;">
<%= image_tag( "#{lattice_grid_instance}/logo_small.png", :style=>"margin-right: 20px;") %>
<h3><%= LatticeGridHelper.direct_preview_title %></h3>
<h3>Top <%= @investigators.length %> Search Results for <i><%= params[:id] %></i> </h3>
<% if @investigators.length > 0 %>
  <table cellpadding="2" cellspacing="0" class="borderless"> 
	<% cnt = 0 %>
	<tr valign="bottom" class="header">
		<td class="list-title-left">
			#
		</td>
		<td class="list-title-left">
			Name
		</td>
	</tr>
  <% for investigator in @investigators[0..9] %>
	<tr class="<%= cycle('even', 'odd') %>">
		<td class="list-left">
			<% cnt+=1 %>
			<%= cnt %>
		</td>
		<td class="list-left">
			<%= link_to( (investigator.first_name||"")+" "+(investigator.middle_name||"")+" "+investigator.last_name+", "+(investigator.degrees||""), investigator_url(investigator.username))  %>
		</td>
	</tr>
  <% end %>
  </table>
  <% end %>
</div>

<br/>
</div>
