<% @include_mesh=true if @include_mesh.nil? %>
<% @include_mesh=false if ! @include_all_mesh.nil? %>
<% @include_all_mesh=false if @include_all_mesh.nil? %>
<% @include_graph_link=true if @include_graph_link.nil? %>
<% @show_paginator=true if @show_paginator.nil? %>

<% @include_investigators=false if @include_investigators.nil? %>
<% @include_pubmed_id = false if @include_pubmed_id.nil? %>
<% @include_collab_marker = false if @include_collab_marker.nil? %>

<% @abstracts = nil if @abstracts.nil? %>
<% @all_abstracts = nil if @all_abstracts.nil? %>
<% @total_entries = nil if @total_entries.nil? %>
<% @investigator = nil if @investigator.nil? %>
<% year_array = LatticeGridHelper.year_array() %>
<% year_array = [] if year_array.nil? %>
<% @do_pagination = false if @do_pagination.blank? %>
<% @heading = "Publications (#{@total_entries})" if @heading.blank? %>

<% if @investigator %>
  <%= render :partial => "investigators/show_investigator.html",
        :locals => {
          :investigator => @investigator,
          :include_mesh => @include_mesh,
          :include_all_mesh => @include_all_mesh,
          :include_graph_link => @include_graph_link,
          :show_paginator => @show_paginator,
          :include_investigators => @include_investigators,
          :include_pubmed_id => @include_pubmed_id,
          :include_collab_marker => @include_collab_marker,
          :abstracts => @abstracts,
          :all_abstracts => @all_abstracts,
          :total_entries => @total_entries,
          :heading => @heading,
          :investigator => @investigator,
          :year_array => year_array,
          :do_pagination => @do_pagination,
        }
  %>
<% end %>
