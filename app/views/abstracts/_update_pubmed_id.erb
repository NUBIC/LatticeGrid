<%=
  "PubMedID #{params[:pubmed_id].to_s} #{(is_new ? 'was added.' : 'was in LatticeGrid.')} Authors: <b>#{abstract.authors}</b> Title: ".html_safe +
  link_to( "<b>#{abstract.title}</b>".html_safe, abstract_url(abstract.id)) +
  " Year: <b>#{abstract.year}</b>. #{pluralize(abstract.investigators.length, 'investigator')} was/were found: ".html_safe %>
<% abstract.investigators.each do |investigator| -%>
	<%= link_to(investigator.name, show_investigator_url(investigator.username, 1))+"; " %>
<% end -%>